*@
@{
}

@model List<VSAtelier.Models.Entities.User>
@if (User.Identity!.IsAuthenticated)
{
    <h1>Użytkownicy</h1>
    <table class="table">
        <thead>
            <tr>
            <th>Id</th>
            <th>Nazwa użytkownika</th>
            <th>Imie</th>
            <th>Nazwisko</th>
            <th>Email</th>
            <th>Numer telefonu</th>
            <th>Adres</th>
            <th>Uprawnienia</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var users in Model)
            {
                <tr>
                    <td>@users.Id</td>
                    <td>@users.UserName</td>
                    <td>@users.name</td>
                    <td>@users.surname</td>
                    <td>@users.Email</td>
                    <td>@users.PhoneNumber</td>
                    <td>@users.address</td>
                    <td>
                        <select id="role" name="role" class="form-control">
                            @foreach (var role in ViewBag.Roles)
                            {
                                var isSelected = ViewBag.UsersWithRoles[users.Id].Contains(role);
                                <option value="@role" selected="@isSelected">@role</option>
                            }
                        </select> </td>


                    <td>
                        <a class="btn btn-primary" asp-controller="Users" asp-action="EditUsers" asp-route-id="@users.Id">Edit</a>
                </tr>
            }
        </tbody>
    </table>
    }
